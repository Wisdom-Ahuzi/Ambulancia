<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    app:contentPaddingBottom="20dp"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/ambulance"

            android:src="@drawable/red" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Admin name"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:id="@+id/adminName"

            android:textStyle="bold"
            android:textColor="@color/blue_11"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Location: Admin Location"
            android:paddingLeft="5dp"
            android:textColor="@color/purple_500"
            android:textSize="18sp"
            android:textAlignment="center"
            android:id="@+id/adminLocation"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Fees: Admin Fees"
            android:textAlignment="center"
            android:id="@+id/adminFees"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:textColor="@color/gray"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivdeleteAmbulance"
                android:src="@drawable/ic_baseline_delete_forever_24"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:id="@+id/ivEditAmbulance"
                android:src="@drawable/ic_baseline_edit_24"/>

        </LinearLayout>
    </LinearLayout>



</com.google.android.material.card.MaterialCardView>