<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:paddingHorizontal="20dp"
    android:scrollbars="none"
    android:background="@color/white"
    tools:context=".AddAmbulance">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="27sp"
            android:textColor="@color/blue_11"
            android:textStyle="bold"
            android:text="Add a new Ambulance"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ambulance Name"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:startIconDrawable="@drawable/ic_baseline_directions_car_24"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:id="@+id/addName"
                android:background="@color/gray_black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ambulance Location"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:startIconDrawable="@drawable/ic_baseline_location_on_24"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addLocation"
                android:justificationMode="inter_word"
                android:background="@color/gray_black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ambulance Description"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:startIconDrawable="@drawable/ic_baseline_description_24"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addDescription"
                android:justificationMode="inter_word"
                android:background="@color/gray_black"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ambulance Fee"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addFees"
                android:justificationMode="inter_word"
                android:background="@color/gray_black"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ambulance Contact"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:startIconDrawable="@drawable/ic_round_phone_24"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addNumber"
                android:justificationMode="inter_word"
                android:background="@color/gray_black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            app:cornerRadius="8dp"
            android:text="Add Ambulance"
            android:layout_marginBottom="100dp"
            android:id="@+id/createAmbulance"
            />


    </LinearLayout>



</ScrollView>